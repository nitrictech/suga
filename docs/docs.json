{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Suga Docs",
  "colors": {
    "primary": "#25B355",
    "light": "#2BC65F",
    "dark": "#25B355"
  },
  "seo": {
    "metatags": {
      "robots": "noindex"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "description": "Learn how to use Suga",
        "icon": "book-open",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart"]
          }
        ]
      },
      {
        "dropdown": "Guides",
        "description": "Learn how to use Suga",
        "icon": "graduation-cap",
        "groups": [
          {
            "group": "Overview",
            "pages": ["guides/overview"]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/add-suga",
              "guides/database-migration",
              "guides/migrate-existing"
            ]
          }
        ]
      },
      {
        "dropdown": "CLI Reference",
        "description": "Reference for the Suga CLI",
        "icon": "terminal",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["cli/introduction", "cli/installation"]
          },
          {
            "group": "Commands",
            "pages": [
              "cli/access-token",
              "cli/build",
              "cli/completion",
              "cli/config",
              "cli/dev",
              "cli/edit",
              "cli/generate",
              "cli/init",
              "cli/login",
              "cli/logout",
              "cli/new",
              "cli/team",
              "cli/templates",
              "cli/version"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://addsuga.com",
          "icon": "globe"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/nitrictech/suga",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/suga-light.svg",
    "dark": "/logo/suga-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@addsuga.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.addsuga.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/sugasrc",
      "github": "https://github.com/nitrictech/suga",
      "linkedin": "https://www.linkedin.com/company/nitrictech"
    }
  }
}
